<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="android.view.View" />

        <variable
            name="viewModel"
            type="com.example.scenichiking.ui.markers_fragment.MarkerItemViewModel" />

    </data>

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp">

        <TextView
            android:id="@+id/txtLatTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="LATITUDE: "
            android:textSize="16sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/txtLatValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{viewModel.lat}"
            android:textSize="16sp"

            app:layout_constraintLeft_toRightOf="@+id/txtLatTitle"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/txtLngTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="LONGITUDE: "
            android:textSize="16sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtLatTitle" />

        <TextView
            android:id="@+id/txtLngValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{viewModel.lng}"
            android:textSize="16sp"

            app:layout_constraintLeft_toRightOf="@+id/txtLngTitle"
            app:layout_constraintTop_toBottomOf="@+id/txtLatTitle" />

        <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:onClick="@{() -> viewModel.onFavoriteClick()}"
            android:src="@{viewModel.isFavorite ? @drawable/ic_like_selected : @drawable/ic_like_normal}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#3CF714"
            app:layout_constraintBottom_toBottomOf="parent" />

    </android.support.constraint.ConstraintLayout>

</layout>